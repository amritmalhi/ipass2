{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build ./build",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cmake --build ./build && ./build/template-pc.exe",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cmake --build ./build --target clean",
            "group": "none",
            "problemMatcher": []
        }
    ]
}